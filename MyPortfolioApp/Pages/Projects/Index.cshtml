@page
@model MyPortfolioApp.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "مشاريعي";
}

<div class="container mt-5">
    <h1 class="display-4 text-right mb-4">أعمالي البرمجية</h1>
    <hr />

    @if (Model.Projects != null && Model.Projects.Any())
    {
        <div class="row">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 project-card">
                        <img src="@project.ImagePath" class="card-img-top" alt="@project.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-right">
                            <h5 class="card-title">@project.Title</h5>
                            <p class="card-text text-muted">@project.Description</p>

                            <h6 class="mt-3">التقنيات المستخدمة:</h6>
                            <div class="mb-3">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="badge bg-secondary text-white m-1">@tech</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-right d-flex justify-content-start flex-wrap">
                            @if (!string.IsNullOrEmpty(project.GitHubLink))
                            {
                                <a href="@project.GitHubLink" target="_blank" class="btn btn-dark btn-sm m-1">
                                    <i class="fab fa-github"></i> GitHub
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(project.LiveDemoLink))
                            {
                                <a href="@project.LiveDemoLink" target="_blank" class="btn btn-primary btn-sm m-1">
                                    <i class="fas fa-eye"></i> Live Demo
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-right">لا توجد مشاريع لعرضها حالياً. يرجى العودة لاحقاً!</p>
    }
</div>

